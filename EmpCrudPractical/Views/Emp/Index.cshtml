@model IEnumerable<EmpCrudPractical.Employee>
@{
    ViewBag.Title = "Index";
}

<br />
<br />
<p>
    @Html.ActionLink("Create New", "Create")
    <div style="margin-left: 800px;margin-top:-33px;">
        @Html.ActionLink("Logout", "Index", "Login")

    </div>
</p>



<table id="myTable" class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Education)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Languages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Birthdate.ToString("MM-dd-yyyy")</td>
            <td>@item.Gender</td>
            <td>@item.Education</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Languages</td>
            <td>@item.Remarks</td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { style = "color: green;" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { style = "color: red;", onclick = "return confirmDelete();" })

            </td>
        </tr>
    }
</table>

<script>
    function confirmDelete() {
        return confirm("Are you sure you want to delete this item?");
    }
    $('#myTable').DataTable({
        paging: true,
        ordering: true
        // Add more options as needed
    });
</script>
