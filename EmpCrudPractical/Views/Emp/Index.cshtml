@model IEnumerable<EmpCrudPractical.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <div style="margin-left: 700px;margin-top:-33px;">
        @Html.ActionLink("Logout and Back to login", "Index", "Login")

    </div>
</p>



<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Birthdate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Education)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mobile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Languages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
        <th>Action</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Birthdate.ToString("MM-dd-yyyy")</td>
            <td>@item.Gender</td>
            <td>@item.Education</td>
            <td>@item.Email</td>
            <td>@item.Mobile</td>
            <td>@item.Languages</td>
            <td>@item.Remarks</td>
            <td>
                @Html.ActionLink("Edit","Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete","Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>